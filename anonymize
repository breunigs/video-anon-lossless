#!/bin/sh


if [ -n "$1" ]; then
  cd "$1"
fi
wd=$(pwd)

set -eu
cd $(dirname "$0")

export DOCKER_BUILDKIT=1
export USER=$(whoami)

docker build -t video-anon:runner .

echo "\n\n"
cd $wd

extra=""
if [ -t 1 ]; then
  extra="--tty"
fi

docker run -i $extra --rm --name video-anon \
  -u $(id -u ${USER}):$(id -g ${USER}) \
  --gpus all \
  --mount type=bind,source=$(pwd),target=/data \
  video-anon:runner
